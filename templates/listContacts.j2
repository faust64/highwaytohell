	<meta name='msapplication-TileImage' content='/static/fav/icon144.png'/>
	<meta name='msapplication-config' content='/static/fav/browserconfig.xml'/>
	<link href='/static/style.css' rel='stylesheet'/>
	<script src='/static/script.js' type='application/javascript'></script>
    </head>
    <body onload='load();'>
	<div class='logout'><a href='/logout'>Logout {{ username }}</a></div>
	<div id='overlay' ondrop='drop(event);' ondragover='allowDrop(event);'>
	    <div id='droppable' class='nestedoverlay' draggable='true' ondragstart='drag(event);'>
		<form id='formcontacts' method='post' action='/settings/contacts/add'>
		    <a id='closeoverlay' onclick='hideForm()' href='#'></a>
		    <table id='formadd'>
			<tr>
			    <td id='formname' class='addformtitle' colspan='2'>Add Contact</td>
			</tr>
			<tr>
			    <td class='inputlabel'>type</td>
			    <td class='inputdata'>
				<select id='contacttype' name='contactType'>
				    <option value='smtp' selected>Mail</option>
				    <option value='sms'>SMS</option>
				</select>
			    </td>
			</tr>
			<tr>
			    <td class='inputlabel'>Address</td>
			    <td class='inputdata'><input id='contacttarget' type='text' size='32' name='contactTarget'/></td>
			</tr>
			<tr>
			    <td class='inputsubmit' colspan='2'><input type='submit' value='Add Contact Address'/></td>
			</tr>
		    </table>
		</form>
	    </div>
	</div>
	<table id='mainpanel'>
	    <tr class='sections'>
		<th class='section'><a href='/domains'>Domains</a></th>
		<td class='section'><div class='disabledsection'>Records</div></td>
		<td class='section'><div class='disabledsection'>Health Checks</div></td>
		<td class='section'><div class='disabledsection'>Notifications</div></td>
		<th class='section'><a href='/settings'>Account Settings</a></th>
	    </tr>
	    <tr>
		<td colspan='5'>
		    <table id='nestedpanel'>
			<tr>
			    <td class='toggleadd' colspan='5'><a onclick='showForm("Add Contact");' href='#'>Add Contact</a></td>
			</tr>
			<tr>
			    <th class='classifier'>Type</th>
			    <th class='classifier'>Target</th>
			    <th class='classifier'>Active</th>
			    <th class='classifier'>Drop Contact</th>
			</tr>
{{#records}}
			<tr>
			    <td class='record'>{{ type }}</td>
			    <td class='record'>{{ target }}</td>
			    <td class='record'>{{{ active }}}</td>
			    <td class='record'><a onclick='dropContact("{{ target }}");' href='#' alt='Drop Contact'><img class='deletelogoimg' src='/static/remove.png/'></a></td>
			</tr>
{{/records}}
		    </table>
		</td>
	    </tr>
	</table>
    </body>
</html>
